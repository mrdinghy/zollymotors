<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :manufacturer_id %>
    <%= f.input :stars_ease %>
    <%= f.input :stars_quality %>
    <%= f.input :stars_price %>
    <%= f.input :stars_ontime %>
    <%= f.input :stars_attention %>
    <%= f.input :service_date %>
    <%= f.input :review_note %>
    <%= f.input :recommended %>
    <%= f.input :car_model %>
    <%= f.input :car_year %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
