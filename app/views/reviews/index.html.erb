<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Manufacturer</th>
      <th>Stars ease</th>
      <th>Stars quality</th>
      <th>Stars price</th>
      <th>Stars ontime</th>
      <th>Stars attention</th>
      <th>Service date</th>
      <th>Review note</th>
      <th>Recommended</th>
      <th>Car model</th>
      <th>Car year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user_id %></td>
        <td><%= review.manufacturer_id %></td>
        <td><%= review.stars_ease %></td>
        <td><%= review.stars_quality %></td>
        <td><%= review.stars_price %></td>
        <td><%= review.stars_ontime %></td>
        <td><%= review.stars_attention %></td>
        <td><%= review.service_date %></td>
        <td><%= review.review_note %></td>
        <td><%= review.recommended %></td>
        <td><%= review.car_model %></td>
        <td><%= review.car_year %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

