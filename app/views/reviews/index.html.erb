<!-- DataTables CSS -->
<link href="/assets/css/dataTables.bootstrap.css" rel="stylesheet">

<!-- DataTables Responsive CSS -->
<link href="/assets/css/dataTables.responsive.css" rel="stylesheet">







<div class="row">
    <div class="col-lg-12">
        <p id="notice"><%= notice %></p>
        <div class="panel panel-default">
            <div class="panel-heading">
                  Customer Reviews
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                      <th>Reviewer</th>
                      <th>Service date</th>
                      <th>Manufacturer</th>
                      <th>Car model</th>
                      <th>Car year</th>
                      <th>Ease</th>
                      <th>Quality</th>
                      <th>Price</th>
                      <th>On Time</th>
                      <th>Attention</th>
                     <th>Review note</th>
                      <th>Recommended</th>
                      <th colspan="3"></th>


                    </tr>
                    </thead>
                    <tbody>
                    <% @reviews.each do |review| %>
                    <tr class="odd gradeX">
                      <td><%= review.email %></td>
                      <td><%= review.service_date %></td>
                      <td><%= review.manufacturer.name %></td>
                      <td><%= review.car_model %></td>
                      <td><%= review.car_year %></td>
                      <td><%= review.stars_ease %></td>
                      <td><%= review.stars_quality %></td>
                      <td><%= review.stars_price %></td>
                      <td><%= review.stars_ontime %></td>
                      <td><%= review.stars_attention %></td>

                      <td><%= review.review_note %></td>
                      <td><%= review.recommended %></td>

                      <td><%= link_to 'Show', review %></td>
                      <td><%= link_to 'Edit', edit_review_path(review) %></td>
                      <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>

                    </tr>
                   <% end %>

                    </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->











<%= link_to 'New Review', new_review_path %>




<script src="/assets/js/jquery.dataTables.min.js"></script>
<script src="/assets/js/dataTables.bootstrap.min.js"></script>