<% @services = Service.all %>
<% @cars = Manufacturer.all %>





<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">

      <div>
        <span class="ss36">Specialty Services</span><Br>
      </div>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right ss18">
        <li>
          <%= link_to root_path do %>
              Home
          <% end %>
        </li>


        <li>
          <%= link_to about_path do %>
              About
          <% end %>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Services <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% @services.each do |service| %>
                <li><%= link_to service do %>
                      <%= service.name %>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cars <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <% @cars.each do |car| %>
                <li><%= link_to car do %>
                      <%= car.name %>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </li>
        <li>
          <a href="sidebar.html">Advice</a>
        </li>

        <li>
          <%= link_to reviews_path do %>
              Reviews
          <% end %>
        </li>
        <li>
          <%= link_to contact_path do %>
              Directions
          <% end %>

        </li>

        <% if user_signed_in? %>

            <li>
              <a class="accordion-toggle" href="#usermenu" data-toggle="collapse">
              <span class="user-info">
                <small>Welcome,</small>
                <%= current_user.email %>
            </span>
                <span class="glyphicon glyphicon-chevron-down"></span>
              </a>
              <ul id="usermenu" class="collapse">
                <li>
                  <%= link_to user_path(current_user) do %>
                      <i class="icon-user"></i>
                      View Profile
                  <% end %>
                </li>
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                      <i class="icon-user"></i>
                      Edit Profile
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, :id => current_user.id, :method => :delete do %>
                      <i class="icon-off"></i>
                      Logout
                  <% end %>
                </li>

              </ul>
            </li>
        <% end %>


        <% if !user_signed_in? %>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>


      </ul>










    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container -->

</nav>




